<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Bubble News App</title>
  <link rel='stylesheet' href='/stylesheets/main.css'>
</head>
<body>

  <header>
    <% if logged_in? %>
    <div class="profile">
      <img class="avatar" src="<%= current_user.avatar %>" alt="">
      <span><%= current_user.display_name %></span>
    </div>
    <% end %>

    <h1>
      <a href="/">Bubbles</a>
    </h1>

    <% if logged_in? %>
    <ul class="nav">
      <li>
        <a href="/new">Add Story</a
      ></li>
      <li class="notification">
        <a href="/users/<%= current_user.id %>">
          <div class="notification-count"><%= Notification.where(receiver_id: current_user.id).count %></div>
          <div class="invitation">Invitations</div>
        </a>
      </li>
      <li>
        <form action="/session" method="post">
          <input type="hidden" name="_method" value="delete">
          <button class="logout">Log Out</button>
        </form>
      </li>
    </ul>
    <% else %>
    <ul class="nav">
      <li>
        <a href="/login">Login</a>
      </li>
      <li>
        <a href="/signup">Sign Up</a>
      </li>
    </ul>
    <% end %>
  </header>
        
  <%= yield %>

  <footer></footer>
</body>
</html>